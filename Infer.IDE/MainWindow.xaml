<Window x:Class="Infer.IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="900">
    <Grid Margin="2,2,2,2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="WriteBox" Grid.Column="0" TextChanged="TextBox_TextChanged" AcceptsReturn="True" AcceptsTab="True">
                
            </TextBox>
            
            <TextBox x:Name="ReadBox" Grid.Column="1" IsReadOnly="True">
                
            </TextBox>
            
        </Grid>
        
        <Button x:Name="Compile" Grid.Row="1" Width="150" HorizontalAlignment="Left" Margin="100, 0, 0, 0" Click="Compile_Click" Content="Compile">
            
        </Button>


    </Grid>
</Window>
